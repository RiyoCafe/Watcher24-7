<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/girlthrucircle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".COnfigureUser">


    <EditText
        android:id="@+id/email_configure_user"
        android:layout_width="293dp"
        android:layout_height="40dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint=" Enter your email address"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="@color/teal_500"
        android:textColorHint="@color/teal_500"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/verify_btn_configure_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/verify_btn_configure_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="@color/teal_500"
        android:text="Verify"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_configure_user"
        app:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#5a2f74"
        android:fontFamily="sans-serif-condensed"
        android:text="Recover Password"
        android:textAlignment="center"
        android:textColor="@color/teal_500"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/email_configure_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>