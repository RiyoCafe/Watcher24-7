<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/username_login"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/girloncycle"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/email_login"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_android_24"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:textColor="#143a50"
        android:textColorHint="#143a50"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="216dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_phonelink_lock_24"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="  Password"
        android:inputType="textPassword"
        android:textColor="#143a50"
        android:textColorHint="#143a50"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_login" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="271dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#143a50"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_login" />

    <Button
        android:id="@+id/signup_login"
        android:layout_width="271dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#143a50"

        android:text="Sign Up"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        app:layout_constraintVertical_bias="0.017" />

    <CheckBox
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Remember Me"
        android:textColor="#143a50"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_login" />

    <ImageView
        android:id="@+id/view_pass_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/password_login"
        app:layout_constraintEnd_toEndOf="@+id/password_login"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="@+id/password_login"
        app:layout_constraintTop_toTopOf="@+id/password_login"
        app:layout_constraintVertical_bias="0.434"
        app:srcCompat="@drawable/view" />

    <TextView
        android:id="@+id/forget_pass_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:text="Forget password?"
        android:textColor="#143a50"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_login" />

</androidx.constraintlayout.widget.ConstraintLayout>
